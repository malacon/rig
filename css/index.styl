@import './normalize.css'
@import './mixin'
@import './layout.css'
@import './jqueryui.css'


.button
  cursor: pointer
  color: #333333

  &:active
    background: #dadada;
    inset-box-shadow(0, 0, 10px, #9c9c9c)

a.button
  color: blue
  
ul.nav
  margin 0
  padding 0      

  li
    display: inline
    border-right 1px solid black
    padding: 20px
    line-height: 25px

.ui-accordion .ui-accordion-content
  padding: 0

.ui-accordion .ui-accordion-header
  padding-left:25px
  height: 35px
  line-height: 35px
  font-size: 16px
  border-bottom: 1px solid rgba(0, 0, 0, 0.3);
  text-shadow: 0 1px 1px #ffffff;
  vbg-gradient(#ffffff, #e0e0e1)
  box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
  overflow: hidden


.ui-icon-off { display: none; }


.ui-layout-north  
  header
    background: url(../img/rig.png) no-repeat center left 
    height: 70px
    padding-left:165px
    border-bottom: 3px solid #EB8F00

    h1
      padding-top: 17px
      color: #58585C

    .help
      background: url(../img/question.png) no-repeat center left
      width: 100px
      height: 70px

      span
        float: right
        color: #58585C
        padding: 20px 12px 0 0
        font-weight: bold
        font-size: 14px

.ui-layout-west
.ui-layout-center
  padding 0
  margin 0

  header
    height: 25px

  ul.nav
  header
    color: #9c9c9c;
    border-bottom: 1px solid rgba(0, 0, 0, 0.3);
    font-weight: bold;
    text-shadow: 0 1px 1px #ffffff;
    font-size: 14px;
    vbg-gradient(#ffffff, #e0e0e1)
    box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
    overflow: hidden

  .content
    padding: 40px
    color: #9C9C9C;
    font-weight: bold;

    em
      color: #EB8F00;

    button
      position: absolute;
      top: 85px
      left: 380px
      width: 88px


.ui-layout-north
  margin: 0
  padding: 0
  
  h1
    margin: 0
    padding: 0

  .help
    position: absolute
    top: 0
    right: 0

.cart
.showItem
.editItem
.checkoutWindow
  display: none

.active
  display: block !important

.ui-layout-center
  position: relative
  
  > *:not(.active)
    display: none


ul.itemsList
  margin: 0
  padding: 0
  list-style: none

  li
    height: 35px
    padding: 0 0 0 50px
    font-size: 14px
    line-height: 35px
    font-weight: bold
    border-bottom: 1px solid #d2d2d1;
    color: #333;
    border-bottom: 1px solid rgba(0, 0, 0, 0.3);
    text-shadow: 0 1px 1px #ffffff;
    vbg-gradient(#ffffff, #e0e0e1)
    box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
    overflow: hidden

    
    img
      float: left
      padding: 5px
  
    &.active
      background: url(../img/bubblesNav.png) no-repeat center right
      


ul.purchasedList
  margin: 0
  padding: 0
  list-style: none

  li
    height: 60px
    padding: 10px 15px 10px 0
    font-weight: bold
    border-bottom: 2px solid #d2d2d1;
    color: #333;
    ellipsis()
    position: relative
    
    img
      float: left
      padding: 5px

    button
      top: 20px
      left: 350px


/*  Form Items */
form
  border-bottom: 1px solid #d2d2d1;
  
button
  border: 1px solid #bbbbbb;
  font-weight: bold;
  text-shadow: 0 1px 1px #ffffff;
  font-family: Helvetica, Arial, "MS Trebuchet", sans-serif;
  font-size: 14px;
  color: #363636;
  padding: 6px 10px;
  margin: 1px 1px 1px 0;
  outline: none;
  background: #f9f9f9;
  vbg-gradient(#f9f9f9, #e3e3e3)
  border-radius(3px)
  box-shadow(0, 1px, 1px, #ffffff)

  &:active
    vbg-gradient(#e3e3e3, #f9f9f9)

  &.default
    color: #ffffff;
    border: 1px solid #3f68a5;
    text-shadow: 0 -1px 1px #46677f;
    vbg-gradient( #7bb5db, #4775b8)

  &.default:active
    vbg-gradient(#4775b8, #7bb5db)

label {
  display: block;
  margin: 0 0 20px 0;
  overflow: visible;
}

label span {
  display: block;
  margin-bottom: 6px;
  margin-left: -3px;
  font-weight: bold;
  font-size: 13px;
}

label input {
  font-size: 14px;
  display: block;
}

label input[type="checkbox"] {
  width: 15px !important;
  margin-right: 7px;
  display: inline-block;
}

label input[type="checkbox"] + span { display: inline; }

label input[type="text"], 
label input[type="email"], 
input[type="password"]
  width: 220px;
  margin: 0 2px 0 0;
  padding: 4px 8px;
  border-box()

textarea {
  width: 220px;
  margin: 0 2px 0 0;
  padding: 4px 8px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

textarea, 
input[type="text"], 
input[type="email"],
input[type="password"]
  border: 1px solid #9e9fa2;
  color: #363636;
  text-shadow: 0 1px 1px #ffffff;
  font-size: 17px;
  outline: none;
  padding: 10px;
  border-radius(20px)
  vbg-gradient(#e6e6e7, #fafafa)
  background: -webkit-gradient(linear, left top, left bottom, from(#e6e6e7), color-stop(0.3, #fafafa), to(#fafafa));

textarea {
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  border-radius: 10px;
  height: 70px;
}