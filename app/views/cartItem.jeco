<li class="item <%= @type %>">
  Name: <em><%= @name %></em><br />
  Type: <em><%= (@type.split(' ').map (word) -> word[0].toUpperCase() + word[1..-1].toLowerCase()).join ' ' %></em><br />
  Quantity <em><%= @quantity %> for $<%= @costMatrix[@quantity] %></em><br />
  <img src="img/<%= @imgLg %>" />
  <button class="edit button">Edit</button>
</li>


